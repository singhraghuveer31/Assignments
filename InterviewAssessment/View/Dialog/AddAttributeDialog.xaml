<Window x:Class="DomainModelEditor.View.Dialog.AddAttributeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Add New Attribute" Height="130" Width="450">
    <StackPanel>
        <StackPanel>
            <Label>Name of the new attribute</Label>
            <TextBox x:Name="NewAttributeName" Margin="10" MaxLength="255" KeyDown="NewAttributeName_KeyDown"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Add" Click="Add_Click" Width="50" TabIndex="1"/>
            <Button Content="Cancel" Click="Cancel_Click" Margin="10,0" Width="50" />
        </StackPanel>
    </StackPanel>
</Window>
